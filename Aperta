<script>
  let selectedModel = '';
  let scaleValue = 100;
  let flowIdx = 0;
  let isIOS = false;
  let currentTab = 'sensi';

  function updateView() {
    document.getElementById('flow').style.transform =
      `translateX(-${flowIdx * 33.333}%)`;

    document.getElementById('btnBack')
      .classList.toggle('hidden', flowIdx === 0);
  }

  function goBack() {
    if (flowIdx > 0) flowIdx--;
    updateView();
  }

  function confirmHardware(model, ios) {
    selectedModel = model;
    isIOS = ios;
    flowIdx = 1;
    updateView();
  }

  function setScale(value) {
    scaleValue = value;
    flowIdx = 2;
    updateView();
    showTab('sensi', document.getElementById('tabSensi'));
  }

  function showTab(type, el) {
    currentTab = type;
    document.querySelectorAll('.tab-btn')
      .forEach(b => b.classList.remove('active'));

    el.classList.add('active');

    const content = document.getElementById('tabContent');
    content.innerHTML = `
      <h2 class="text-purple-500 text-xs font-bold uppercase mb-1">${selectedModel}</h2>
      <h1 class="text-2xl font-extrabold mb-6">Configuração Otimizada</h1>
      <p class="text-gray-400 text-sm">
        Sensibilidade ajustada automaticamente para ${scaleValue}%.
      </p>
    `;
  }
</script>

